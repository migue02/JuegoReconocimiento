<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/layoutSexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:gravity="top"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/AlumPrin"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="top|center"
                    android:scaleType="fitXY"
                    android:src="@drawable/boy" />

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:text="GÃ©nero"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textColor="@color/texto_tabla" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="top|center"
                    android:layout_marginBottom="20dp"
                    android:background="@color/texto_tabla" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:baselineAligned="false"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/pulsaChico"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/sel_icono_alumno"
                        android:drawableTop="@drawable/boy"
                        android:padding="5dp"
                        android:text="Chico" />

                    <Button
                        android:id="@+id/pulsaChica"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/sel_icono_alumno"
                        android:drawableTop="@drawable/girl"
                        android:padding="5dp"
                        android:text="Chica" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/layoutSexo"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:weightSum="1"
                android:id="@+id/linearLayout1">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/texto_tabla" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/texto_tabla" />

                <EditText
                    android:id="@+id/daNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:maxLength="30"
                    android:ems="10"
                    android:hint="Nombre"
                    android:inputType="textCapSentences" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apellidos"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/texto_tabla" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/texto_tabla" />

                <EditText
                    android:id="@+id/daApellidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:ems="10"
                    android:hint="Apellidos"
                    android:maxLength="50"
                    android:inputType="textCapSentences" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de Nacimiento"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/texto_tabla" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/texto_tabla" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp" >

                    <TextView
                        android:id="@+id/MuestraFecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="dd/mm/aaaa"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <Button
                        android:id="@+id/CambiarFecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/seliconodialogo"
                        android:drawableRight="@drawable/fecha"
                        android:gravity="center_vertical"
                        android:text="Cambiar Fecha"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="Observaciones"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/texto_tabla" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/texto_tabla" />

                <EditText
                    android:id="@+id/daObserva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:minHeight="100dp"
                    android:gravity="top"
                    android:hint="Observaciones"
                    android:inputType="textMultiLine|textCapSentences"
                    android:singleLine="false" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout1"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/cAlumnos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@drawable/seliconodialogo"
                    android:text="@string/cancelar"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/gAlumnos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@drawable/seliconodialogo"
                    android:text="@string/guardarCambios"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>



</LinearLayout>