<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/AlumPrin"
                    android:layout_width="309dp"
                    android:layout_height="309dp"
                    android:src="@drawable/boy" />

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GÃ©nero"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textColor="@color/texto_tabla" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/texto_tabla" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="horizontal" >


                    <Button
                        android:id="@+id/pulsaChico"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/sel_icono_alumno"
                        android:drawableTop="@drawable/boy"
                        android:text="Chico" />
                    
                    <Button
                        android:id="@+id/pulsaChica"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/sel_icono_alumno"
                        android:drawableTop="@drawable/girl"
                        android:text="Chica" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/texto_tabla" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/texto_tabla" />

                <EditText
                    android:id="@+id/daNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:ems="10"
                    android:hint="Nombre"
                    android:inputType="textCapSentences" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apellidos"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/texto_tabla" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/texto_tabla" />

                <EditText
                    android:id="@+id/daApellidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:ems="10"
                    android:hint="Apellidos"
                    android:inputType="textCapSentences" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de Nacimiento"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/texto_tabla" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/texto_tabla" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp" >

                    <TextView
                        android:id="@+id/MuestraFecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="dd/mm/aaaa"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <Button
                        android:id="@+id/CambiarFecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:background="@drawable/seliconodialogo"
                        android:textColor="#ffffff"
                        android:drawableRight="@drawable/fecha"
                        android:text="Cambiar Fecha" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="Observaciones"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/texto_tabla" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/texto_tabla" />

                <ScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/daObserva"
                            android:layout_width="match_parent"
                            android:layout_height="220dp"
                            android:ems="10"
                            android:gravity="top"
                            android:hint="Observaciones"
                            android:inputType="textMultiLine|textCapSentences"
                            android:singleLine="false" >

                            <requestFocus />
                        </EditText>

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_weight="0.05"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:visibility="visible" >

        <Button
            android:id="@+id/cAlumnos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/seliconodialogo"
            android:textColor="#ffffff"
            android:text="Cancelar" />

        <Button
            android:id="@+id/gAlumnos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/seliconodialogo"
            android:textColor="#ffffff"
            android:text="Guardar Cambios" />

    </LinearLayout>

</LinearLayout>