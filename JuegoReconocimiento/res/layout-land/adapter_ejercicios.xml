<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:background="@drawable/tablerowsel"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/NombSelEj"
        style="@style/TextoTabla"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/DurSelEj"
        android:drawableLeft="@drawable/ejercicios_64"
        android:drawablePadding="5dp"
        android:gravity="center|left"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@id/DurSelEj"
        style="@style/TextoTabla"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/midrag"
        android:gravity="center|left"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@id/midrag"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/drag" />

</RelativeLayout>