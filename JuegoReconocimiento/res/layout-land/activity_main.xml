<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:splitMotionEvents="false"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textoBienv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Â¡Bienvenido!"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffff2c08"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.57"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/buttonAlum"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/alumnos"
                    android:onClick="onAlumnosClick" />

                <ImageView
                    android:id="@+id/buttonEj"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/ejercicios"
                    android:onClick="onEjerciciosClick" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/buttonEsta"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/resultados"
                    android:onClick="onResultadosClick" />

                <ImageView
                    android:id="@+id/ButtonSerie"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/series"
                    android:onClick="onSeriesClick" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/buttonObjetos"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/objeto"
                    android:onClick="onObjetosClick" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.43"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/Empezar"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:src="@drawable/empezar"
                android:onClick="onClickEmpezar"
                android:textAlignment="gravity" />

            <ImageView
                android:id="@+id/textView4"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:onClick="onClickEmpezar"
                android:src="@drawable/empezar_texto" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/degradado_main"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onReiniciaClick"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ReiniciaBD"
                        android:textColor="@color/about_naranja"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClickLogin"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admin"
                        android:textColor="@color/about_naranja"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>