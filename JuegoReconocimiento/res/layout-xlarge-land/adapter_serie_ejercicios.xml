<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:background="@drawable/tablerowsel"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/NombSelSer"
        style="@style/TextoTablaSeries"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/DurSelSer"
        android:drawableLeft="@drawable/series_64"
        android:drawablePadding="5dp"
        android:gravity="center|left"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/DurSelSer"
        style="@style/TextoTablaSeries"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_toLeftOf="@+id/ModiSelSer"
        android:gravity="center_vertical|left"
        android:paddingBottom="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/ModiSelSer"
        style="@style/TextoTablaSeries"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_toLeftOf="@id/midrag"
        android:gravity="center_vertical|right"
        android:paddingBottom="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/midrag"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/drag"
        android:paddingBottom="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp" />

</RelativeLayout>