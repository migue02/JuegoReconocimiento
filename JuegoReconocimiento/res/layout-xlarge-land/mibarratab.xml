<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1"
    android:background="@color/black">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/principalTab"
        android:src="@drawable/ic_launcher"
        android:layout_gravity="center_vertical|left"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:padding="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/textView2"
        android:layout_gravity="center_vertical|left"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/principalTab"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ranking"
        android:id="@+id/TitTab"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="fill_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Juan Manuel (1/2)"
        android:id="@+id/TitEjerTab"
        android:layout_gravity="center"
        android:textColor="@color/about_naranja"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/linearLayout"
        android:layout_marginRight="105dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:id="@+id/linearLayout">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/GraphAnteriorTab"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ant_blanco"
            android:layout_marginRight="20dp"
            android:background="@drawable/selicono" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/GraphSiguienteTab"
            android:layout_gravity="center_vertical"
            android:src="@drawable/sig_blanco"
            android:background="@drawable/selicono" />
    </LinearLayout>

</RelativeLayout>
