<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="67dp"
    android:background="@drawable/tablerowsel"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/sexAl"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/boy" />

    <TextView
        android:id="@+id/nomAl"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/sexAl"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/sexAl"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        style="@style/TextoTabla"/>

    <TextView
        style="@style/TextoTabla"
        android:id="@+id/apeAl"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignTop="@+id/nomAl"
        android:layout_toRightOf="@+id/nomAl"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/edadAl"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        style="@style/TextoTabla"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/apeAl"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp" />

    <ImageView
        android:id="@+id/midrag"
        android:layout_width="120dp"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/drag" />

</RelativeLayout>