<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1"
    android:background="@color/black">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/principalGraf"
        android:src="@drawable/ic_launcher"
        android:layout_gravity="center_vertical|left"
        android:layout_margin="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/textView2"
        android:layout_gravity="center_vertical|left"
        android:textColor="@color/white"
        android:layout_marginRight="100dp" />

    <TextView
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ranking de Alumnos(1/2)"
        android:id="@+id/TitGraf"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginRight="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ultima semana 11/Jun/2014 - 17/Jun/2014"
        android:id="@+id/TitEjerGraf"
        android:layout_gravity="center"
        android:textColor="@color/about_naranja" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:gravity="right">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/GraphAnteriorGraf"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ant_blanco"
            android:layout_marginRight="20dp"
            android:background="@drawable/selicono" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/GraphSiguienteGraf"
            android:layout_gravity="center_vertical"
            android:src="@drawable/sig_blanco"
            android:background="@drawable/selicono" />
    </LinearLayout>

</LinearLayout>
