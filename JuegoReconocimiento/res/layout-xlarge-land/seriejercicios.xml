<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/ugr_background" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ListView
            android:id="@+id/listViewSer"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.75" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.25">


            <RelativeLayout
                android:id="@+id/RelativeLayout1"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@color/tituloTabla"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/NombSelSer"
                    android:layout_width="350dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Nombre"
                    style="@style/TituloTabla"/>

                <TextView
                    android:id="@+id/DurSelSer"
                    android:layout_width="150dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/NombSelSer"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Duración"
                    style="@style/TituloTabla"/>

                <TextView
                    android:id="@+id/ModiSelSer"
                    android:layout_width="150dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/DurSelSer"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Última modificación"
                    style="@style/TituloTabla"/>


                <TextView
                    android:id="@+id/MovSelSer"
                    style="@style/TituloTabla"
                    android:layout_width="120dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:gravity="left"
                    android:paddingLeft="8dp"
                    android:text="Mover"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </RelativeLayout>

            <com.mobeta.android.dslv.DragSortListView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:dslv="http://schemas.android.com/apk/res/es.ugr.juegoreconocimiento"
                android:id="@+id/ListaSelSer"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:background="@color/rellenoTabla"
                android:dividerHeight="5dp"
                android:fastScrollEnabled="true"
                android:paddingBottom="0dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp"
                dslv:collapsed_height="2dp"
                dslv:drag_enabled="true"
                dslv:drag_handle_id="@id/midrag"
                dslv:drag_scroll_start="0.33"
                dslv:drag_start_mode="onDown"
                dslv:float_alpha="0.6"
                dslv:max_drag_scroll_speed="0.5"
                dslv:remove_enabled="true"
                dslv:remove_mode="flingRemove"
                dslv:slide_shuffle_speed="0.3"
                dslv:sort_enabled="true"
                dslv:track_drag_sort="false"
                dslv:use_default_controller="true" />

        </LinearLayout>

    </LinearLayout>
    
</RelativeLayout>